<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Conversion.UnitPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness"
            iOS="0, 20, 0, 0" />
    </ContentPage.Padding>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start"
                Margin="10,0,10,0">
                <Label x:Name="HeaderLabel"
                    Text="UnitGroup"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="End"
                    FontAttributes="Bold"
                    FontSize="Large" />
                <StackLayout Orientation="Horizontal">
                    <Label x:Name="HeaderLabelPrev"
                        Text="&lt; UnitGroupPrev"
                        HorizontalOptions="StartAndExpand"
                        VerticalOptions="StartAndExpand"
                        FontSize="Small" />
                    <Label x:Name="HeaderLabelNext"
                        Text="UnitGroupNext &gt;"
                        HorizontalOptions="EndAndExpand"
                        VerticalOptions="StartAndExpand"
                        FontSize="Small" />
                </StackLayout>
            </StackLayout>
            <StackLayout Spacing="20"
                Margin="10,0,10,0"
                VerticalOptions="CenterAndExpand">
                <StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Entry x:Name="NumLeft"
                            Keyboard="Numeric"
                            HorizontalOptions="FillAndExpand"
                            FontSize="Large"
                            HeightRequest="40"
                            TextChanged="OnTextChanged" />
                        <Label x:Name="ResultInput"
                            Text="Unit"
                            FontSize="Large"
                            WidthRequest="110"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                    </StackLayout>
                    <Label Text="is equal to"
                        HorizontalOptions="Center"
                        VerticalOptions="Center" />
                    <StackLayout Orientation="Horizontal">
                        <Entry x:Name="NumRight"
                            Keyboard="Numeric"
                            HorizontalOptions="FillAndExpand"
                            FontSize="Large"
                            HeightRequest="40"
                            TextChanged="OnTextChanged"
                            IsEnabled="false" />
                        <Label x:Name="ResultOutput"
                            Text="Unit"
                            FontSize="Large"
                            WidthRequest="110"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                    </StackLayout>
                </StackLayout>
                <StackLayout>
                    <BoxView HeightRequest="1"
                        WidthRequest="300"
                        BackgroundColor="Gray"
                        HorizontalOptions="Center" />
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Picker x:Name="pickerLeft"
                        HeightRequest="40"
                        HorizontalOptions="StartAndExpand"
                        WidthRequest="110"
                        SelectedIndexChanged="OnChangedEvent" />
                    <Label x:Name="SwapLabel"
                        Text="â‡†"
                        FontSize="40"
                        HorizontalOptions="CenterAndExpand">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnChangedEvent"
                                NumberOfTapsRequired="1" />
                        </Label.GestureRecognizers>
                    </Label>
                    <Picker x:Name="pickerRight"
                        HorizontalOptions="EndAndExpand"
                        WidthRequest="110"
                        SelectedIndexChanged="OnChangedEvent" />
                </StackLayout>
            </StackLayout>
            <StackLayout VerticalOptions="End">
                <BoxView BackgroundColor="Olive"
                    HeightRequest="50" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>